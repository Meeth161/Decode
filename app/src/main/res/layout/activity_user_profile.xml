<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.example.decode.UserProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView_userProfile"
        android:layout_width="160dp"
        android:layout_margin="24dp"
        android:scaleType="centerCrop"
        app:civ_border_width="4dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/colorPrimary"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:layout_height="160dp" />

    <TextView
        android:id="@+id/textView_name_userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@id/circleImageView_userProfile"/>

    <Button
        android:id="@+id/button_sendFriendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textSize="20sp"
        android:text="Send Friend Request"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
